@model LibraryManagementSystem.Models.Entity.LOANS

@{
    ViewBag.Title = "GiveLoan";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>User Id</label>
        @*@Html.TextBoxFor(k => k.USER, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.USER.ID, (List<SelectListItem>)ViewBag.vl1, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Book Id</label>
        @*@Html.TextBoxFor(k => k.BOOK, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.BOOK.ID, (List<SelectListItem>)ViewBag.vl2, new { @class = "form-control" })

    </div>
    <div style="margin-top:15px">
        <label>Staff Id</label>
        @*@Html.TextBoxFor(x => x.STAFF, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.STAFF.ID, (List<SelectListItem>)ViewBag.vl3, new { @class = "form-control" })

    </div>
    <div style="margin-top:15px">
        <label>Book Loan Date</label>
        <input type="text" class="form-control" name="BORROWDATE" value="@DateTime.Now.ToShortDateString()"/>
    </div>
    <div style="margin-top:15px">
        <label>Book Loan EndDate</label>
        <input type="text" class="form-control" name="DUEDATE" value="@DateTime.Now.AddDays(7).ToShortDateString()"/>
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">GIVE LOAN</button>
        <input type="hidden" value="False" name="OPERATIONSSTATE"/>
    </div>
</form>