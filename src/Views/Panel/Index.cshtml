@model LibraryManagementSystem.Models.Entity.USER
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Library User Profil Info</h2>

@using (Html.BeginForm("Index2", "Panel", FormMethod.Post))
{
    <table class="table table-hover" style="margin-top:30px">

        <tr>
            <td>
                <label style="font-weight:bolder"> Email: </label> 
                @HttpContext.Current.User.Identity.Name
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBoxFor(x => x.NAME, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                @Html.TextBoxFor(x => x.SURNAME, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>   @Html.TextBoxFor(x => x.USERNAME, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>   @Html.TextBoxFor(x => x.PASSWORD, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>   @Html.TextBoxFor(x => x.IMAGE, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>   @Html.TextBoxFor(x => x.SCHOOLNAME, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>
                <button class="btn btn-warning">Update Password</button>
            </td>
        </tr>
    </table>
}